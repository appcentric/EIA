<?xml version="1.0" encoding="UTF-8"?>
<project name="EIARelease">
  <property environment="env"/>

	<fail message="Please set the EIA_HOME as environment variable">
			<condition>
			   <not>
				   <isset property="env.EIA_HOME" />
			  </not>
			</condition>
	</fail>

	<fail message="Please set the JAVA_HOME as environment variable">
			<condition>
			   <not>
				   <isset property="env.JAVA_HOME" />
			  </not>
			</condition>
	</fail>

	<fail message="Please set the ANT_HOME as environment variable">
			<condition>
			   <not>
				   <isset property="env.ANT_HOME" />
			  </not>
			</condition>
	</fail>

	<tstamp>
	  <format property="deploy.timestamp"
			  pattern="yyyy-MM-DD-hhmmss.SSS"
			  locale="en,US"/>
	 </tstamp>


    <!--echo>Deploy Time Stamp ${deploy.timestamp}</echo-->



	<!--property name="deploy.dir" value="${compositeDir}/deploy"/-->
	<property name="java.home" value="${env.JAVA_HOME}"/>
	<property name="eia.home" value="${env.EIA_HOME}"/>    
	<property name="release.base" value="${eia.base}/releases"/>   
	<property name="pack.base" value="${eia.base}/Packs"/>   
	<target name="create-release">
        <echo>Release Base directory Time Stamp ${release.base}</echo>
        <echo>Pack Base directory Time Stamp ${pack.base}</echo>
		<delete dir="${release.base}/${releaseName}" />
		<mkdir dir="${release.base}/${releaseName}/${releaseVersion}" />

		<copy todir="${release.base}/${releaseName}/${releaseVersion}">
		 <fileset dir="${pack.base}">
		  <include name="**"/>
		 </fileset>
		</copy>
	 </target>


	
    <target name="help">
	      <echo message="Creates a release directory"/>
          <echo message="================================================================================"/>
          <echo Message="Input parameters: releaseName, releaseNumber" />
          <echo message="================================================================================"/>
	</target>

</project>